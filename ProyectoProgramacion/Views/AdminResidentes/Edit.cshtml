@model ProyectoProgramacion.Models.EF.Usuario
@{
    ViewBag.Title = "Editar Residente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 680px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Editar Residente</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID_Usuario)
                <div class="row g-3">
                    <div class="col-md-6">@Html.LabelFor(m => m.Nombre, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })</div>
                    <div class="col-md-6">@Html.LabelFor(m => m.Cedula, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control" })</div>
                    <div class="col-md-6">@Html.LabelFor(m => m.Telefono, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })</div>
                    <div class="col-md-6">@Html.LabelFor(m => m.Correo, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Correo, new { @class = "form-control" })</div>
                    <div class="col-md-6">@Html.LabelFor(m => m.Contrasenna, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Contrasenna, new { @class = "form-control", type = "password" })</div>
                    <div class="col-md-6">@Html.LabelFor(m => m.Fecha_Nacimiento, new { @class = "form-label fw-bold" }) @Html.TextBoxFor(m => m.Fecha_Nacimiento, new { @class = "form-control", type = "date" })</div>
                </div>
                <div class="d-grid mt-4"><button class="btn btn-primary btn-lg" type="submit">Guardar cambios</button></div>
            }
        </div>
    </div>
</div>