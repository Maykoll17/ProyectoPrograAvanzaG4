@model IEnumerable<ProyectoProgramacion.Models.EF.AreaRecreativa>
@{
    ViewBag.Title = "Áreas Recreativas";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";

}
<br />
<br />
<br />
<br />
<div class="container py-5">
    <h2 class="mb-4 text-warning">Áreas Recreativas</h2>

    <div class="row g-4">
        @foreach (var a in Model)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top"
                         src="@Url.Content(string.IsNullOrWhiteSpace(a.ImageUrl) ? "~/assets/img/placeholder-800x450.png" : a.ImageUrl)"
                         alt="@a.Nombre" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@a.Nombre</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(!string.IsNullOrWhiteSpace(a.Descripcion) ? a.Descripcion : "—")
                        </p>
                        <span class="badge bg-warning text-dark mb-3">Horario: @a.Horario</span>
                        @Html.ActionLink("Ver más", "Details", "AreasRecreativas",
                                         new { id = a.ID_Area },
                                         new { @class = "btn btn-warning text-white mt-auto" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>
