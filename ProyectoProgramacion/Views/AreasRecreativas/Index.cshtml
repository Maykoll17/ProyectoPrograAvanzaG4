@model List<ProyectoProgramacion.Models.EF.AreaRecreativa>

@{
    ViewBag.Title = "Áreas Recreativas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 bg-light rounded shadow-sm">
    <h2 class="mb-4 text-warning fw-bold text-center">Áreas Recreativas Disponibles</h2>

    <div class="row g-4">
        @foreach (var area in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="https://source.unsplash.com/400x250/?recreation,park,area" class="card-img-top" alt="Área Recreativa">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold">@area.Nombre</h5>
                        <p class="card-text text-secondary flex-grow-1">@area.Descripcion</p>
                        <span class="badge bg-warning text-dark mb-3">Horario: @area.Horario</span>
                        <a href="@Url.Action("Details", "AreasRecreativas", new { id = area.ID_Area })" class="btn btn-outline-warning mt-auto">
                            Ver más detalles
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
