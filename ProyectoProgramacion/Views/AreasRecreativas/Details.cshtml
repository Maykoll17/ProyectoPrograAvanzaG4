@model ProyectoProgramacion.Models.EF.AreaRecreativa
@{
    ViewBag.Title = "Detalle Área";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";

}
<br />
<br />
<br />
<br />
<div class="container py-5">
    <div class="row gy-4">
        <div class="col-md-6">
            <img class="img-fluid rounded shadow"
                 src="@Url.Content(string.IsNullOrWhiteSpace(Model.ImageUrl) ? "~/assets/img/placeholder-1200x800.png" : Model.ImageUrl)"
                 alt="@Model.Nombre" />
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Nombre</h2>
            <p class="lead">@Model.Descripcion</p>
            <p><span class="badge bg-warning text-dark">Horario: @Model.Horario</span></p>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary mt-3">Volver</a>
        </div>
    </div>
</div>

