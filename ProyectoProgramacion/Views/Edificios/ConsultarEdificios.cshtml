@model IEnumerable<ProyectoProgramacion.Models.EF.Edificio>
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Edificios (Admin)";
}
<br />
<br />
<br />
<br />
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Edificios</h3>
        @Html.ActionLink("Nuevo Edificio", "RegistrarEdificio", "Edificios", null, new { @class = "btn btn-primary" })
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:120px;">Foto</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Pisos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(e.Foto))
                            {
                                <img src="@Url.Content(e.Foto)" class="img-thumbnail" style="max-width:110px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin foto</span>
                            }
                        </td>
                        <td>@e.Nombre</td>
                        <td>@e.Direccion</td>
                        <td>@e.Cantidad_Pisos</td>
                        <td class="text-end">
                            @Html.ActionLink("Editar", "ActualizarEdificio", new { id = e.ID_Edificio }, new { @class = "btn btn-sm btn-outline-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
