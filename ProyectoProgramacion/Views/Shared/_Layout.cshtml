<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administración de Apartamentos</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <!-- Barra de usuario -->
        <header class="bg-light py-2 border-bottom mb-3">
            <div class="container d-flex justify-content-between align-items-center">
                <h4 class="m-0 text-secondary">Sistema de Alquiler</h4>
                <div class="d-flex align-items-center gap-2">
                    <i class="fas fa-user-circle fa-lg text-primary"></i>
                    <span class="me-3">@User.Identity.Name</span>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger btn-sm">Cerrar sesión</a>
                </div>
            </div>
        </header>

        <!-- Navegación -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Pagos")"><i class="fas fa-money-bill-wave"></i> Pagos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "AreasRecreativas")"><i class="fas fa-tree"></i> Áreas Recreativas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "AdminAreas")"><i class="fas fa-tools"></i> Gestión Áreas (Admin)</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted small">
            <p>&copy; @DateTime.Now.Year - Administración de Apartamentos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
