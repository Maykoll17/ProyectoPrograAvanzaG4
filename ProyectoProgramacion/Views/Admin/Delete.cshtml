@model ProyectoProgramacion.Models.EF.Apartamento
@{
    ViewBag.Title = "Eliminar Apartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">¿Eliminar Apartamento?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Código</dt>
                <dd class="col-sm-8">@Model.Codigo_Apartamento</dd>
                <dt class="col-sm-4">Piso</dt>
                <dd class="col-sm-8">@Model.Piso</dd>
                <dt class="col-sm-4">Metros²</dt>
                <dd class="col-sm-8">@Model.Metros_Cuadrados</dd>
                <dt class="col-sm-4">Disponible</dt>
                <dd class="col-sm-8">@((Model.Disponible ?? false) ? "Sí" : "No")</dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID_Apartamento)
                <div class="d-flex justify-content-between">
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>