@model ProyectoProgramacion.Models.EF.AreaRecreativa
@{
    ViewBag.Title = "Editar Área";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";

}
<br />
<br />
<br />
<br />
<div class="container mt-4">
    <h3 class="mb-3">Editar Área</h3>

    @using (Html.BeginForm("Edit", "AdminAreas", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID_Area)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Descripcion)
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = "4" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Horario)
            @Html.TextBoxFor(m => m.Horario, new { @class = "form-control" })
        </div>

        <div class="mb-2">
            <label class="form-label d-block">Imagen actual</label>
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" class="img-thumbnail mb-2" style="max-width:160px;" />
            }
            else
            {
                <span class="text-muted">Sin imagen</span>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Reemplazar imagen</label>
            <input type="file" name="nuevaImagen" class="form-control" accept="image/*" />
        </div>

        <button class="btn btn-primary">Guardar cambios</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>
