@model ProyectoProgramacion.Models.EF.AreaRecreativa

@{
    ViewBag.Title = "Editar Área Recreativa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Editar Área Recreativa</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID_Area)

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Nombre, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del área" })
                    @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Descripcion, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3, placeholder = "Descripción del área" })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Horario, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Horario, new { @class = "form-control", placeholder = "Horario (Ej. 9:00 am - 5:00 pm)" })
                    @Html.ValidationMessageFor(m => m.Horario, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(m => m.ImageUrl, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ImageUrl, new
                    {
                        @class = "form-control",
                        placeholder = "https://source.unsplash.com/800x600/?gimnasio"
                    })
                    @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                    <small class="text-muted">Si lo dejás vacío, el sistema intentará usar una imagen relacionada al nombre.</small>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>