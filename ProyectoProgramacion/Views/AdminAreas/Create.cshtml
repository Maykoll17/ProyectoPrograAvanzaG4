@model ProyectoProgramacion.Models.EF.AreaRecreativa
@{
    ViewBag.Title = "Nueva Área";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<br />
<br />
<br />
<br />
<div class="container mt-4">
    <h3 class="mb-3">Agregar Área</h3>

    @using (Html.BeginForm("Create", "AdminAreas", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre del área" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.Descripcion)
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = "4", placeholder = "Descripción" })
        </div>

        <div class="mb-3">
            <label class="form-label">Horario de apertura</label>
            <input type="time" name="HoraInicio" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Horario de cierre</label>
            <input type="time" name="HoraFin" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Imagen</label>
            <input type="file" name="imagen" class="form-control" accept="image/*" />
        </div>

        <button class="btn btn-success">Guardar</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ms-2" })
    }
</div>

