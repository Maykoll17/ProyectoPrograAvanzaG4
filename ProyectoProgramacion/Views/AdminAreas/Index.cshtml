@model List<ProyectoProgramacion.Models.EF.AreaRecreativa>

@{
    ViewBag.Title = "Administrar Áreas Recreativas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Gestión de Áreas Recreativas</h2>
        @Html.ActionLink("Agregar Nueva Área", "Create", "AdminAreas", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark text-white">
            <tr>
                <th>Nombre</th>
                <th>Horario</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No hay áreas registradas.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Horario</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.ID_Area }, new { @class = "btn btn-sm btn-outline-primary" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Area }, new { @class = "btn btn-sm btn-outline-danger ms-2" })
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
