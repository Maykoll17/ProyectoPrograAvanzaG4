@model IEnumerable<ProyectoProgramacion.Models.EF.AreaRecreativa>
@{
    ViewBag.Title = "Gestión de Áreas";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";

}
<br />
<br />
<br />
<br />
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="m-0">Áreas Recreativas</h3>
        @Html.ActionLink("Nueva Área", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:120px;">Imagen</th>
                    <th>Nombre</th>
                    <th>Horario</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(a.ImageUrl))
                            {
                                <img src="@Url.Content(a.ImageUrl)" class="img-thumbnail" style="max-width:110px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin imagen</span>
                            }
                        </td>
                        <td>@a.Nombre</td>
                        <td>@a.Horario</td>
                        <td class="text-end">
                            @Html.ActionLink("Editar", "Edit", new { id = a.ID_Area }, new { @class = "btn btn-sm btn-outline-primary" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = a.ID_Area }, new { @class = "btn btn-sm btn-outline-danger ms-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
