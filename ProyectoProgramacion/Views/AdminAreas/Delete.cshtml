@model ProyectoProgramacion.Models.EF.AreaRecreativa

@{
    ViewBag.Title = "Eliminar Área Recreativa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">¿Estás seguro de eliminar esta área?</h4>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <strong class="text-secondary">Nombre:</strong>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Nombre)</p>
            </div>

            <div class="mb-3">
                <strong class="text-secondary">Descripción:</strong>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Descripcion)</p>
            </div>

            <div class="mb-4">
                <strong class="text-secondary">Horario:</strong>
                <p class="form-control-plaintext">@Html.DisplayFor(model => model.Horario)</p>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ID_Area" />

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Eliminar Definitivamente" class="btn btn-danger" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }

        </div>
    </div>
</div>
