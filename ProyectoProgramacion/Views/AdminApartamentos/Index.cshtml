@model IEnumerable<ProyectoProgramacion.Models.EF.Apartamento>
@{
    ViewBag.Title = "Apartamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Lista de Apartamentos</h2>
        @Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-success" })
    </div>

    @if (TempData["ok"] != null)
    {<div class="alert alert-success">@TempData["ok"]</div>}

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-dark text-white">
                <tr>
                    <th>Código</th>
                    <th>Edificio</th>
                    <th>Piso</th>
                    <th>Metros²</th>
                    <th>Habitantes</th>
                    <th>Sanitarios</th>
                    <th>Disponible</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.Codigo_Apartamento</td>
                        <td>@a.ID_Edificio</td>
                        <td>@a.Piso</td>
                        <td>@a.Metros_Cuadrados</td>
                        <td>@a.Cantidad_Habitantes</td>
                        <td>@a.Cant_Sanitarios</td>
                        <td>@(a.Disponible == true ? Html.Raw("<span class='badge bg-success'>Sí</span>") : Html.Raw("<span class='badge bg-secondary'>No</span>"))</td>
                        <td class="text-center">
                            <div class="btn-group">
                                @Html.ActionLink("Editar", "Edit", new { id = a.ID_Apartamento }, new { @class = "btn btn-sm btn-outline-primary" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = a.ID_Apartamento }, new { @class = "btn btn-sm btn-outline-danger ms-2" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>