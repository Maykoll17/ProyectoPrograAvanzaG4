@model ProyectoProgramacion.Models.EF.Apartamento
@{
    ViewBag.Title = "Nuevo Apartamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="card shadow-lg rounded-4 mx-auto" style="max-width: 680px;">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0">Crear Apartamento</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row g-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Codigo_Apartamento, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Codigo_Apartamento, new { @class = "form-control", placeholder = "APT-101" })
                        @Html.ValidationMessageFor(m => m.Codigo_Apartamento, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.Label("Edificio", new { @class = "form-label fw-bold" })
                        @Html.DropDownList("ID_Edificio", (SelectList)ViewBag.ID_Edificio, "-- Seleccione --", new { @class = "form-select" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Piso, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Piso, new { @class = "form-control", type = "number" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Metros_Cuadrados, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Metros_Cuadrados, new { @class = "form-control", type = "number", step = "0.1" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(m => m.Cantidad_Habitantes, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Cantidad_Habitantes, new { @class = "form-control", type = "number" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.Cant_Sanitarios, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Cant_Sanitarios, new { @class = "form-control", type = "number" })
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.Disponible, new { @class = "form-check-input", id = "disp" })
                            <label for="disp" class="form-check-label">Disponible</label>
                        </div>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-success btn-lg" type="submit">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>